@model BarnamenevisanCompany.Domain.ViewModels.Admin.Faq.AdminUpdateFaqViewModel

@{
    ViewData["Title"] = "ویرایش پرسش و پاسخ";
}

@section Breadcrumb
{
    <admin-breadcrumb page-title="@ViewData["Title"]">
        <admin-breadcrumb-item asp-area="Admin" asp-controller="Faq" asp-action="List">لیست سوالات متداول</admin-breadcrumb-item>
        <admin-breadcrumb-item last-active-item="true">@ViewData["Title"]</admin-breadcrumb-item>
    </admin-breadcrumb>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div>
                    
                    <form asp-area="Admin"
                          asp-controller="Faq"
                          asp-action="Update"
                          enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id"/>
                        <div class="row">

                            <div class="floating-labels col-12 col-md-6 mt-4 mb-2 mb-md-0">
                                <div class="form-group">
                                    <textarea asp-for="Question" class="mt-1" ckeditor></textarea>
                                    <span class="bar"></span>
                                    <label asp-for="Question" class="mb-2 label-floating"></label>
                                    <span asp-validation-for="Question"></span>
                                </div>
                            </div>

                            <div class="floating-labels col-12 col-md-6 mt-5 mt-md-4">
                                <div class="form-group">
                                    <textarea asp-for="Answer" class="mt-1" ckeditor></textarea>
                                    <span class="bar"></span>
                                    <label asp-for="Answer" class="mb-2 label-floating"></label>
                                    <span asp-validation-for="Answer"></span>
                                </div>
                            </div>

                            <div class="col-12 mt-5">
                                <button class="btn btn-rounded btn-success" type="submit">ویرایش</button>
                                <a asp-area="Admin"
                                   asp-controller="Faq"
                                   asp-action="List"
                                   asp-route-page="@ViewBag.Page"
                                   class="btn btn-rounded btn-danger">بازگشت</a>
                            </div>

                        </div>

                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>
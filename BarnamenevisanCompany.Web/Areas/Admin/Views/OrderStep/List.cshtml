@using BarnamenevisanCompany.Application.Extensions
@using BarnamenevisanCompany.Application.Statics
@using BarnamenevisanCompany.Domain.Enums.Common
@using BarnamenevisanCompany.Domain.Enums.Order
@using BarnamenevisanCompany.Infra.Data.Statics
@using BarnamenevisanCompany.Web.Helpers.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BarnamenevisanCompany.Domain.ViewModels.Admin.OrderStep.AdminFilterOrderStepViewModel

@{
    ViewData["Title"] = "لیست مراحل ثبت سفارش";
}

@section Breadcrumb{
    <admin-breadcrumb page-title="@ViewData["Title"]">
        <admin-breadcrumb-item last-active-item="true">@ViewData["Title"]</admin-breadcrumb-item>
    </admin-breadcrumb>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-4">
                    <h2 class="card-title">فیلتــر</h2>
                </div>
                <div>
                    <form asp-area="Admin"
                          asp-controller="OrderStep"
                          asp-action="List"
                          id="filter-search"
                          method="get"
                          class="floating-labels"
                          no-validation>
                        <input asp-for="Page" type="hidden"/>
                        <input asp-for="IsAjax" value="@Model.IsAjax" type="hidden"/>
                        <div class="row filter-form justify-content-center">
                            <div class="form-group col-12 col-md-4 mb-4">
                                <input asp-for="Title" class="form-control">
                                <span class="bar"></span>
                                <label asp-for="Title"></label>
                            </div>
                            <div class="form-group col-12 col-md-4 mb-4">
                                <select class="form-control form-select" asp-for="OrderStepFilter"
                                        asp-items="@Html.GetEnumSelectList<OrderStepFilter>()"></select>
                                <span class="bar"></span>
                                <label asp-for="OrderStepFilter"></label>
                            </div>
                            <div class="form-group col-12 col-md-4 mb-4">
                                <select class="form-control form-select" asp-for="DeleteStatus"
                                        asp-items="@Html.GetEnumSelectList<DeleteStatus>()"></select>
                                <span class="bar"></span>
                                <label asp-for="DeleteStatus"></label>
                            </div>
                            <div class="col-12 mt-3 d-md-flex">
                                <div class="col-12 col-md-2 p-0 me-1">
                                    <button class="btn btn-rounded btn-outline-primary w-100" type="submit">جستجو
                                    </button>
                                </div>
                                @if (Model.HasFilters())
                                {
                                    <div class="col-12 col-md-2 p-0 mt-3 mt-md-0">
                                        <a class="btn btn-rounded btn-danger w-100 text-nowrap"
                                           asp-area="Admin"
                                           asp-controller="OrderStep"
                                           asp-action="List">حذف فیلتر ها
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="card-title">@ViewData["Title"]</h2>
                    </div>
                    <div invoke-permission="@PermissionsName.CreateOrderStep">
                        <a class="btn btn-rounded btn-success"
                           asp-area="Admin"
                           asp-controller="OrderStep"
                           asp-ajax="true"
                           asp-ajax-modal-type="Medium"
                           asp-ajax-modal-title="افزودن"
                           asp-ajax-validation="true"
                           asp-action="Create">افزودن</a>
                    </div>
                </div>
                @if (Model.Entities is not null && Model.Entities.Any())
                {
                    <div class="table-responsive mb-4 border rounded-1">

                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                            <tr>

                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">اولویت نمایش</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">عنوان</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">تاریخ ایجاد</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">عملیات</h6>
                                </th>

                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var step in Model.Entities)
                            {
                                <tr>

                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@step.PriorityId</p>
                                    </td>
                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@step.Title</p>
                                    </td>

                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@step.CreateDate.ToShamsiDateTime()</p>
                                    </td>
                                    <td>
                                        <a invoke-permission="@PermissionsName.UpdateOrderStep"
                                           asp-area="Admin"
                                           class="text-warning removeAfterDelete @(step.IsDeleted ? "d-none" : "")"
                                           asp-controller="OrderStep"
                                           asp-action="Update"
                                           asp-ajax="true"
                                           asp-ajax-modal-type="Medium"
                                           asp-ajax-modal-title="ویرایش"
                                           asp-ajax-validation="true"
                                           asp-route-id="@step.Id"
                                           title="ویرایش">
                                            <iconify-icon icon="uil:edit" width="22" height="22"></iconify-icon>
                                        </a>
                                        @if (!step.IsDeleted)
                                        {
                                            <a invoke-permission="@PermissionsName.DeleteOrRecoverOrderStep"
                                               class="text-danger"
                                               onclick="ConfirmDelete(this, '@Url.Action("DeleteOrRecover", "OrderStep", new { area = "Admin", id = step.Id })')"
                                               title="حذف">
                                                <iconify-icon icon="solar:trash-bin-trash-outline" width="22"
                                                              height="22"></iconify-icon>
                                            </a>
                                        }
                                        else
                                        {
                                            <a invoke-permission="@PermissionsName.DeleteOrRecoverOrderStep"
                                               class="text-info"
                                               onclick="ConfirmRecover(this, '@Url.Action("DeleteOrRecover", "OrderStep", new { area = "Admin", id = step.Id })')"
                                               title="بازیابی">

                                                <iconify-icon icon="solar:undo-left-round-outline" width="22"
                                                              height="22"></iconify-icon>
                                            </a>
                                        }


                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <partial name="_PagingPartial" model="@Model.GetCurrentPaging()"/>
                }
                else
                {
                    <partial name="_NotFoundPartial"/>
                }
            </div>
        </div>
    </div>
</div>
@using BarnamenevisanCompany.Application.Extensions
@using BarnamenevisanCompany.Domain.Enums.Common
@using BarnamenevisanCompany.Infra.Data.Statics
@using BarnamenevisanCompany.Web.Helpers.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BarnamenevisanCompany.Domain.ViewModels.Admin.Role.AdminFilterRolesViewModel
@{
    ViewData["Title"] = "لیست نقش ها";
}

@section Breadcrumb
{
    <admin-breadcrumb page-title="@ViewData["Title"]">
        <admin-breadcrumb-item last-active-item="true">لیست نقش ها</admin-breadcrumb-item>
    </admin-breadcrumb>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-4">
                    <h2 class="card-title">فیلتــر</h2>
                </div>
                <div>
                    <form asp-area="Admin"
                          asp-controller="Role"
                          asp-action="List"
                          method="get"
                          id="filter-search"
                          class="floating-labels"
                          no-validation>
                        <input asp-for="Page" type="hidden"/>
                        <input asp-for="IsAjax" value="@Model.IsAjax" type="hidden"/>
                        <div class="row filter-form">
                            <div class="form-group col-12 col-md-4 mb-4">
                                <input asp-for="Name" class="form-control">
                                <span class="bar"></span>
                                <label asp-for="Name"></label>
                            </div>
                            <div class="form-group col-12 col-md-4 mb-4">
                                <select class="form-control form-select" asp-for="DeleteStatus"
                                        asp-items="@Html.GetEnumSelectList<DeleteStatus>()"></select>
                                <span class="bar"></span>
                                <label asp-for="DeleteStatus"></label>
                            </div>

                            <div class="col-12 mt-3 d-md-flex">
                                <div class="col-12 col-md-2 p-0 me-1">
                                    <button class="btn btn-rounded btn-outline-primary w-100" type="submit">جستجو
                                    </button>
                                </div>
                                @if (Model.HasFilters())
                                {
                                    <div class="col-12 col-md-2 p-0 mt-3 mt-md-0">
                                        <a class="btn btn-rounded btn-danger w-100 text-nowrap"
                                           asp-area="Admin"
                                           asp-controller="Role"
                                           asp-action="List">حذف فیلتر ها
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="card-title">@ViewData["Title"]</h2>
                    </div>
                    <div invoke-permission="@PermissionsName.CreateRole">
                        <a class="btn btn-rounded btn-success"
                           asp-area="Admin"
                           asp-controller="Role"
                           asp-action="Create"
                           asp-ajax="true"
                           asp-ajax-modal-type="Medium"
                           asp-ajax-modal-title="افزودن نقش"
                           asp-ajax-validation="true">افزودن</a>
                    </div>
                </div>
                @if (Model.Entities is not null && Model.Entities.Any())
                {
                    <div class="table-responsive mb-4 border rounded-1">

                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                            <tr>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">عنوان نقش</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">عملیات</h6>
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var role in Model.Entities)
                            {
                                <tr>
                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@role.Name</p>
                                    </td>
                                    <td>
                                        @if (role.Id > 1)
                                        {
                                            <a invoke-permission="@PermissionsName.SetPermissionToRole"
                                               asp-area="Admin"
                                               asp-controller="Role"
                                               asp-action="SetPermissionToRole"
                                               asp-route-id="@role.Id"
                                               class="text-info removeAfterDelete @(role.IsDeleted ? "d-none" : "")"
                                               title="افزودن دسترسی">
                                                <iconify-icon icon="mdi:lock-plus-outline" width="22"
                                                              height="22"></iconify-icon>
                                            </a>
                                            <a invoke-permission="@PermissionsName.UpdateRole"
                                               asp-area="Admin"
                                               asp-controller="Role"
                                               asp-action="Update"
                                               asp-ajax="true"
                                               asp-ajax-modal-type="Medium"
                                               asp-ajax-modal-title="ویرایش نقش"
                                               asp-ajax-validation="true"
                                               asp-route-id="@role.Id"
                                               class="text-warning removeAfterDelete @(role.IsDeleted ? "d-none" : "")"
                                               title="ویرایش">
                                                <iconify-icon icon="uil:edit" width="22" height="22"></iconify-icon>
                                            </a>
                                            @if (role.IsDeleted)
                                            {
                                                <a invoke-permission="@PermissionsName.DeleteOrRecoverRole"
                                                   class="text-info"
                                                   onclick="ConfirmRecover(this, '@Url.Action("DeleteOrRecover", "Role", new { area = "Admin", id = role.Id })')"
                                                   title="بازگردانی">
                                                    <iconify-icon icon="solar:undo-left-round-outline" width="22"
                                                                  height="22"></iconify-icon>
                                                </a>
                                            }
                                            else
                                            {
                                                <a invoke-permission="@PermissionsName.DeleteOrRecoverRole"
                                                   class="text-danger"
                                                   onclick="ConfirmDelete(this, '@Url.Action("DeleteOrRecover", "Role", new { area = "Admin", id = role.Id })')"
                                                   title="حذف">
                                                    <iconify-icon icon="solar:trash-bin-trash-outline" width="22"
                                                                  height="22"></iconify-icon>
                                                </a>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-danger">امکان حذف یا ویرایش وجود ندارد !</span>
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <partial name="~/Areas/Admin/Views/Shared/_PagingPartial.cshtml" model="@Model.GetCurrentPaging()"/>
                }
                else
                {
                    <partial name="_NotFoundPartial"/>
                }
            </div>
        </div>
    </div>
</div>
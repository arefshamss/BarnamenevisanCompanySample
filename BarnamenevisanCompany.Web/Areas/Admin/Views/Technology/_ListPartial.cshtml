@using BarnamenevisanCompany.Application.Extensions
@using BarnamenevisanCompany.Application.Statics
@using BarnamenevisanCompany.Domain.Enums.Common
@using BarnamenevisanCompany.Domain.Shared
@using BarnamenevisanCompany.Web.Helpers.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BarnamenevisanCompany.Domain.ViewModels.Admin.Technology.AdminFilterTechnologyViewModel
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-4">
                    <h2 class="card-title">فیلتــر</h2>
                </div>
                <div>
                    <form asp-area="Admin"
                          asp-controller="Technology"
                          asp-action="ListPartial"
                          asp-ajax="true"
                          asp-ajax-method="Get"
                          asp-ajax-modal-type="Large"
                          asp-ajax-modal-title="تکنولوژی ها استفاده شده"
                          asp-ajax-complete="Technology.UpdateTable()"
                          id="@Model.FormId"

                          class="floating-labels">
                        <input asp-for="Page" type="hidden"/>
                        <input asp-for="IsAjax" value="@Model.IsAjax" type="hidden"/>
                        <div class="row filter-form justify-content-center">
                            <div class="form-group col-12 col-md-4 mb-4">
                                <input asp-for="Title" class="form-control">
                                <span class="bar"></span>
                                <label asp-for="Title"></label>
                            </div>
                            <div class="form-group col-12 col-md-4 mb-4">
                                <select class="form-control form-select" asp-for="DeleteStatus"
                                        asp-items="@Html.GetEnumSelectList<DeleteStatus>()"></select>
                                <span class="bar"></span>
                                <label asp-for="DeleteStatus"></label>
                            </div>
                            <div class="form-group col-12 col-md-4 mb-4">
                                <select class="form-control form-select" asp-for="FilterOrderBy"
                                        asp-items="@Html.GetEnumSelectList<FilterOrderBy>()"></select>
                                <span class="bar"></span>
                                <label asp-for="FilterOrderBy"></label>
                            </div>

                            <div class="col-12 mt-3 d-md-flex">
                                    <div class="col-12 col-md-2 p-0 me-1">
                                        <button class="btn btn-rounded btn-outline-primary w-100" type="submit">جستجو
                                        </button>
                                    </div>
                                    @if (Model.HasFilters())
                                    {
                                        <div class="col-12 col-md-2 p-0 mt-3 mt-md-0">
                                            <a class="btn btn-rounded btn-danger w-100 text-nowrap"
                                               asp-area="Admin"
                                               asp-controller="Technology"
                                               asp-action="ListPartial"
                                               asp-ajax="true"
                                               asp-ajax-modal-type="Large"
                                               asp-ajax-modal-title="لیست تکنولوژی ها">حذف فیلتر ها
                                            </a>
                                        </div>
                                    }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="card-title">@ViewData["Title"]</h2>
                    </div>
                </div>
                @if (Model.Entities is not null && Model.Entities.Any())
                {
                    <div class="table-responsive mb-4 border rounded-1">

                        <table id="technology-body" class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                            <tr>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">تصویر</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">عنوان</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">تاریخ ایجاد</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">عملیات</h6>
                                </th>

                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var technology in Model.Entities)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img
                                                src="@(FilePaths.TechnologyImage + technology.ImageName)"
                                                class="rounded-circle"
                                                width="40"
                                                height="40">

                                        </div>
                                    </td>
                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@technology.Title</p>
                                    </td>

                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@technology.CreateDate.ToShamsiDateTime()</p>
                                    </td>
                                    <td id="technology-@technology.Id">
                                        <a class="text-success cursor-pointer add-btn"
                                           onclick="Technology.Add(event,@technology.Id)">
                                            <iconify-icon icon="tabler:square-plus" width="24"
                                                          height="24"></iconify-icon>
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                            
                        </table>
                    </div>
                    <partial name="_PagingPartial" model="@Model.GetCurrentPaging()"/>
                    <div class="mt-5">
                        <button class="btn btn-success" type="button"
                                onclick="Technology.SaveChangesAndHideModal()">ثبت
                        </button>
                        <button
                            class="btn btn-rounded btn-danger" type="button" data-bs-dismiss="modal">انصراف
                        </button>
                    </div>
                }
                else
                {
                    <partial name="_NotFoundPartial"/>
                }
            </div>
        </div>
    </div>
</div>


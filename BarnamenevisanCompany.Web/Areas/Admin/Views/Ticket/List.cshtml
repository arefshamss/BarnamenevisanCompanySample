@using BarnamenevisanCompany.Application.Extensions
@using BarnamenevisanCompany.Domain.Enums.Common
@using BarnamenevisanCompany.Domain.Enums.Ticket
@using BarnamenevisanCompany.Domain.Shared
@using BarnamenevisanCompany.Infra.Data.Statics
@using BarnamenevisanCompany.Web.Helpers.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BarnamenevisanCompany.Domain.ViewModels.Admin.Ticket.AdminFilterTicketsViewModel
@{
    ViewData["Title"] = "لیست تیکت ها";
    var priorities = ViewData["Priorities"] as SelectList;
}

@section Breadcrumb

{
    <admin-breadcrumb page-title="@ViewData["Title"]">
        <admin-breadcrumb-item last-active-item="true">@ViewData["Title"]</admin-breadcrumb-item>
    </admin-breadcrumb>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-4">
                    <h2 class="card-title">فیلتــر</h2>
                </div>
                <div>
                    <form asp-area="Admin"
                          asp-controller="Ticket"
                          asp-action="List"
                          method="get"
                          id="filter-search"
                          no-validation>
                        <input asp-for="Page" type="hidden"/>
                        <input asp-for="IsAjax" value="@Model.IsAjax" type="hidden"/>
                        <div class="row filter-form justify-content-center">
                            <div class="floating-labels col-12 col-md-6 col-lg-3 mb-4">
                                <div class="form-group">
                                    <input asp-for="Title" class="form-control">
                                    <span class="bar"></span>
                                    <label asp-for="Title"></label>
                                </div>
                            </div>
                            <div class="floating-labels col-12 col-md-6 col-lg-3 mb-4">
                                <div class="form-group">
                                    <select class="form-control form-select" asp-for="TicketStatus"
                                            asp-items="@Html.GetEnumSelectList<FilterByTicketStatus>()"></select>
                                    <span class="bar"></span>
                                    <label asp-for="TicketStatus"></label>
                                </div>
                            </div>
                            <div class="floating-labels col-12 col-md-6 col-lg-3 mb-4">
                                <div class="form-group">
                                    <select class="form-control form-select" asp-for="PriorityId"
                                            asp-items="priorities">
                                        <option selected="selected">همه</option>
                                    </select>
                                    <span class="bar"></span>
                                    <label asp-for="PriorityId"></label>
                                </div>
                            </div>
                            <div class="floating-labels col-12 col-md-6 col-lg-3 mb-4">
                                <div class="form-group">
                                    <select class="form-control form-select" asp-for="FilterOrderBy"
                                            asp-items="@Html.GetEnumSelectList<FilterOrderBy>()"></select>
                                    <span class="bar"></span>
                                    <label asp-for="FilterOrderBy"></label>
                                </div>
                            </div>
                          

                            <div class="col-12 mt-3 d-md-flex">
                                <div class="col-12 col-md-2 me-1">
                                    <button class="btn btn-rounded btn-outline-primary w-100" type="submit">جستجو
                                    </button>
                                </div>
                                @if (Model.HasFilters())
                                {
                                    <div class="col-12 col-md-2 p-0 mt-3 mt-md-0">
                                        <a class="btn btn-rounded btn-danger w-100 text-nowrap"
                                           asp-area="Admin"
                                           asp-controller="Ticket"
                                           asp-action="List">حذف فیلتر ها
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="card-title">@ViewData["Title"]</h2>
                    </div>
                    <div>
                        <a invoke-permission="@PermissionsName.CreateTicket"
                           class="btn btn-rounded btn-success"
                           asp-area="Admin"
                           asp-controller="Ticket"
                           asp-action="Create">افزودن</a>
                    </div>
                </div>
                @if (Model.Entities is not null && Model.Entities.Any())
                {
                    <div class="table-responsive mb-4 border rounded-1">

                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                            <tr>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">موضوع</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">اولویت</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">کاربر</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">تاریخ ایجاد</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">وضعیت تیکت</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">عملیات</h6>
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var ticket in Model.Entities)
                            {
                                <tr>
                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@ticket.Title</p>
                                    </td>
                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@ticket.Priority.Title</p>
                                    </td>
                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@($"{ticket.User.FirstName} {ticket.User.LastName}")</p>
                                    </td>
                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@ticket.CreatedDate.ToShamsiDateTime()</p>
                                    </td>
                                    <td>
                                        @switch (ticket.TicketStatus)
                                        {
                                            case TicketStatus.InProgress:
                                                <span class="badge bg-warning-subtle text-warning">در حال بررسی</span>
                                                break;

                                            case TicketStatus.SupporterAnswered:
                                                <span class="badge bg-success-subtle text-success">پاسخ داده شده</span>
                                                break;

                                            case TicketStatus.PendingForUserAnswer:
                                                <span class="badge bg-info-subtle text-info">در انتظار پاسخ کاربر</span>
                                                break;

                                            case TicketStatus.Closed:
                                                <span class="badge bg-danger-subtle text-danger">بسته شده</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <a invoke-permission="@PermissionsName.TicketDetails"
                                           asp-area="Admin"
                                           asp-controller="Ticket"
                                           asp-action="Detail"
                                           asp-route-id="@ticket.Id"
                                           class="text-info removeAfterDelete @(ticket.IsDeleted ? "d-none" : "")"
                                           title="جزئیات">
                                            <iconify-icon icon="fluent:eye-28-regular" width="22"
                                                          height="22"></iconify-icon>
                                        </a>
                                        <a invoke-permission="@PermissionsName.UpdateTicket"
                                           asp-area="Admin"
                                           asp-controller="Ticket"
                                           asp-action="Update"
                                           asp-route-id="@ticket.Id"
                                           asp-ajax="true"
                                           asp-ajax-modal-type="Medium"
                                           asp-ajax-modal-title="ویرایش تیکت"
                                           asp-ajax-validation="true"
                                           class="text-warning removeAfterDelete @(ticket.IsDeleted ? "d-none" : "")"
                                           title="ویرایش">
                                            <iconify-icon icon="uil:edit" width="22" height="22"></iconify-icon>
                                        </a>
                                        @if (ticket.IsDeleted)
                                        {
                                            <a invoke-permission="@PermissionsName.DeleteOrRecoverTicket"
                                               class="text-info"
                                               onclick="ConfirmRecover(this, '@Url.Action("DeleteOrRecover", "Ticket", new { area = "Admin", id = ticket.Id })')"
                                               title="بازگردانی">
                                                <iconify-icon icon="solar:undo-left-round-outline" width="22"
                                                              height="22"></iconify-icon>
                                            </a>
                                        }
                                        else
                                        {
                                            <a invoke-permission="@PermissionsName.DeleteOrRecoverTicket"
                                               class="text-danger"
                                               onclick="ConfirmDelete(this, '@Url.Action("DeleteOrRecover", "Ticket", new { area = "Admin", id = ticket.Id })')"
                                               title="حذف">
                                                <iconify-icon icon="solar:trash-bin-trash-outline" width="22"
                                                              height="22"></iconify-icon>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <partial name="_PagingPartial" model="@Model.GetCurrentPaging()"/>
                }
                else
                {
                    <partial name="_NotFoundPartial"/>
                }
            </div>
        </div>
    </div>
</div>


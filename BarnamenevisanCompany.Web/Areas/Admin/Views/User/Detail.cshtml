@using BarnamenevisanCompany.Application.Extensions
@using BarnamenevisanCompany.Application.Statics
@using BarnamenevisanCompany.Web.Helpers.TagHelpers
@model BarnamenevisanCompany.Domain.ViewModels.Admin.User.AdminUserViewModel
@{
    ViewData["Title"] = "پروفایل کاربر";
}

@section Breadcrumb
{
    <admin-breadcrumb page-title="@ViewData["Title"]">
        <admin-breadcrumb-item asp-area="Admin" asp-controller="User" asp-action="List">لیست کاربران</admin-breadcrumb-item>
        <admin-breadcrumb-item last-active-item="true">پروفایل کاربر</admin-breadcrumb-item>
    </admin-breadcrumb>
}

<div class="row">
    <div class="col-12">
        <div class="card overflow-hidden">
            <div class="card-body p-0">
                <img src="/Admin/assets/images/backgrounds/profilebg.jpg" class="img-fluid object-fit-cover w-100" style="height: 13rem;">
                <div class="row align-items-center">
                    <div class="col-12 mt-n3 order-lg-2 order-1">
                        <div class="mt-n5">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <div class="d-flex align-items-center justify-content-center round-110">
                                    <div class="border border-4 border-white d-flex align-items-center justify-content-center rounded-circle overflow-hidden round-100">
                                        <img src="@FilePaths.UserOriginalAvatar@(Model.AvatarImageName.IsNullOrEmptyOrWhiteSpace() ? SiteTools.DefaultImageName : Model.AvatarImageName)" alt="profile-picture" class="w-100 h-100">
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <h5 class="mb-0">@($"{Model.FirstName} {Model.LastName}")</h5>
                            </div>
                        </div>
                    </div>
                </div>
                <ul class="nav nav-pills user-profile-tab justify-content-start mt-2 bg-primary-subtle rounded-2 rounded-top-0" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link hstack gap-2 rounded-0 fs-12 py-6 active" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-account" type="button" role="tab" aria-controls="pills-account" aria-selected="true">
                            <iconify-icon icon="solar:user-broken" width="20" height="20"></iconify-icon>
                            <span class="d-none d-md-block">حساب کاربری</span>
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link hstack gap-2 rounded-0 fs-12 py-6" id="pills-tickets-tab" data-bs-toggle="pill" data-bs-target="#pills-tickets" type="button" role="tab" aria-controls="pills-tickets" aria-selected="true">
                            <iconify-icon icon="tdesign:service-filled" width="20" height="20"></iconify-icon>
                            <span class="d-none d-md-block">تیکت‌ها</span>
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link hstack gap-2 rounded-0 fs-12 py-6" id="pills-orders-tab" data-bs-toggle="pill" data-bs-target="#pills-orders" type="button" role="tab" 
                                aria-controls="pills-tickets" aria-selected="true">
                            <iconify-icon icon="lsicon:order-outline" width="20" height="20"></iconify-icon>
                            <span class="d-none d-md-block">سفارشات</span>
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link hstack gap-2 rounded-0 fs-12 py-6" id="pills-consults-tab" data-bs-toggle="pill" data-bs-target="#pills-consults" type="button" role="tab" 
                                aria-controls="pills-tickets" aria-selected="true">
                            <iconify-icon icon="akar-icons:chat-bubble" width="20" height="20"></iconify-icon>
                            <span class="d-none d-md-block">درخواست‌های مشاوره</span>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade active show" id="pills-account" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card shadow-none border">
                            <div class="card-body">
                                <h4 class="mb-3">اطلاعات کاربر</h4>
                                <div class="vstack gap-3 mt-4">
                                    <div class="hstack gap-6">
                                        <iconify-icon icon="solar:user-broken" width="22" height="22"></iconify-icon>
                                        <h6 class="mb-0">نام و نام خانوادگی :</h6>
                                        <p class="mb-0 fw-semibold">@(Model.FirstName.IsNullOrEmptyOrWhiteSpace() && Model.LastName.IsNullOrEmptyOrWhiteSpace() ? "ثبت نشده" : $"{Model.FirstName ?? ""} {Model.LastName ?? ""}")</p>
                                    </div>
                                    <div class="hstack gap-6">
                                        <iconify-icon icon="mingcute:phone-line" width="22" height="22"></iconify-icon>
                                        <h6 class="mb-0">شماره تلفن :</h6>
                                        <p class="mb-0 fw-semibold">@Model.Mobile.ToShow()</p>
                                    </div>
                                    <div class="hstack gap-6">
                                        <iconify-icon icon="mdi:account-tick-outline" width="22" height="22"></iconify-icon>
                                        <h6 class="mb-0">وضعیت حساب کاربری :</h6>
                                        <div class="d-flex">
                                            <iconify-icon class="@(Model.IsActive ? "text-success" : "text-danger") me-1"
                                                          icon="@(Model.IsActive ? "charm:tick" : "material-symbols:close-rounded")" width="22" height="22"></iconify-icon>
                                            <p class="mb-0 fw-semibold">@(Model.IsActive ? "فعال" : "غیرفعال")</p>
                                        </div>
                                    </div>
                                    <div class="hstack gap-6">
                                        <iconify-icon icon="uil:calender" width="22" height="22"></iconify-icon>
                                        <h6 class="mb-0">تاریخ ایجاد :</h6>
                                        <p class="mb-0 fw-semibold">@Model.CreatedDate.ToShamsiDateTime()</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="pills-tickets" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
                @await Component.InvokeAsync("TicketList", new { userId = Model.Id })
            </div>
            <div class="tab-pane fade" id="pills-orders" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
                @await Component.InvokeAsync("OrderList", new { userId = Model.Id })
            </div>
            <div class="tab-pane fade" id="pills-consults" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
                @await Component.InvokeAsync("ConsultList", new { userId = Model.Id })
            </div>
        </div>

       

    </div>
</div>

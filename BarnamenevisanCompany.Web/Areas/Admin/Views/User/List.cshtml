@using BarnamenevisanCompany.Application.Extensions
@using BarnamenevisanCompany.Application.Statics
@using BarnamenevisanCompany.Domain.Enums.Common
@using BarnamenevisanCompany.Domain.Enums.User
@using BarnamenevisanCompany.Domain.Shared
@using BarnamenevisanCompany.Infra.Data.Statics
@model BarnamenevisanCompany.Domain.ViewModels.Admin.User.AdminFilterUsersViewModel
@{
    ViewData["Title"] = "لیست کاربران";
}

@section Breadcrumb
{
    <admin-breadcrumb page-title="@ViewData["Title"]">
        <admin-breadcrumb-item last-active-item="true">لیست کاربران</admin-breadcrumb-item>
    </admin-breadcrumb>
}

@section Scripts
{
    <script src="/admin/js/role-service.js"></script>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-4">
                    <h2 class="card-title">فیلتــر</h2>
                </div>
                <div>
                    <form asp-area="Admin"
                          asp-controller="User"
                          asp-action="List"
                          method="get"
                          id="filter-search"
                          class="floating-labels"
                          no-validation>
                        <input asp-for="Page" type="hidden"/>
                        <div class="row filter-form">
                            <div class="form-group col-12 col-md-4 mb-4">
                                <input asp-for="FirstName" class="form-control">
                                <span class="bar"></span>
                                <label asp-for="FirstName"></label>
                            </div>
                            <div class="form-group col-12 col-md-4 mb-4">
                                <input asp-for="LastName" class="form-control">
                                <span class="bar"></span>
                                <label asp-for="LastName"></label>
                            </div>
                            <div class="form-group col-12 col-md-4 mb-4">
                                <input asp-for="Mobile" class="form-control">
                                <span class="bar"></span>
                                <label asp-for="Mobile"></label>
                            </div>
                            <div class="form-group col-12 col-md-4 mb-4">
                                <select class="form-control form-select" asp-for="FilterOrderBy"
                                        asp-items="@Html.GetEnumSelectList<FilterOrderBy>()"></select>
                                <span class="bar"></span>
                                <label asp-for="FilterOrderBy"></label>
                            </div>
                            <div class="form-group col-12 col-md-4 mb-4">
                                <select class="form-control form-select" asp-for="UserActiveStatus"
                                        asp-items="@Html.GetEnumSelectList<UserActiveStatus>()"></select>
                                <span class="bar"></span>
                                <label asp-for="UserActiveStatus"></label>
                            </div>
                            <div class="form-group col-12 col-md-4 mb-4">
                                <select class="form-control form-select" asp-for="DeleteStatus"
                                        asp-items="@Html.GetEnumSelectList<DeleteStatus>()"></select>
                                <span class="bar"></span>
                                <label asp-for="DeleteStatus"></label>
                            </div>

                            <div class="col-12 mt-3 d-md-flex">
                                <div class="col-12 col-md-2 p-0 me-1">
                                    <button class="btn btn-rounded btn-outline-primary w-100" type="submit">جستجو
                                    </button>
                                </div>
                                @if (Model.HasFilters())
                                {
                                    <div class="col-12 col-md-2 p-0 mt-3 mt-md-0">
                                        <a class="btn btn-rounded btn-danger w-100 text-nowrap"
                                           asp-area="Admin"
                                           asp-controller="User"
                                           asp-action="List">حذف فیلتر ها
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="card-title">@ViewData["Title"]</h2>
                    </div>
                    <div invoke-permission="@PermissionsName.CreateUser">
                        <a class="btn btn-rounded btn-success"
                           asp-area="Admin"
                           asp-controller="User"
                           asp-action="Create">افزودن</a>
                    </div>
                </div>
                @if (Model.Entities is not null && Model.Entities.Any())
                {
                    <div class="table-responsive mb-4 border rounded-1">

                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                            <tr>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">نام و نام خانوادگی</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">شماره تلفن</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">وضعیت حساب کاربری</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">تاریخ ایجاد</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">عملیات</h6>
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var user in Model.Entities)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img
                                                src="@FilePaths.UserOriginalAvatar@(!user.AvatarImageName.IsNullOrEmptyOrWhiteSpace() ? user.AvatarImageName : SiteTools.DefaultImageName)"
                                                class="rounded-circle"
                                                width="40"
                                                height="40">
                                            <div class="ms-3">
                                                <h6 class="fs-4 fw-semibold mb-0">@(user.FirstName.IsNullOrEmptyOrWhiteSpace() && user.LastName.IsNullOrEmptyOrWhiteSpace() ? user.Mobile : $"{user.FirstName ?? ""} {user.LastName ?? ""}")</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@user.Mobile</p>
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success-subtle text-success">فعال</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger-subtle text-danger">غیرفعال</span>
                                        }
                                    </td>
                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@user.CreatedDate.ToShamsiDateTime()</p>
                                    </td>
                                    <td>
                                        <a invoke-permission="@PermissionsName.UserDetails"
                                           asp-area="Admin"
                                           asp-controller="User"
                                           asp-action="Detail"
                                           asp-route-id="@user.Id"
                                           class="text-info removeAfterDelete @(user.IsDeleted ? "d-none" : "")"
                                           title="جزئیات">
                                            <iconify-icon icon="fluent:eye-28-regular" width="22"
                                                          height="22"></iconify-icon>
                                        </a>
                                        <a invoke-permission="@PermissionsName.SetUserToRole"
                                           asp-area="Admin"
                                           asp-controller="Role"
                                           asp-action="SetRoleToUser"
                                           asp-route-userId="@user.Id"
                                           asp-ajax="true"
                                           asp-ajax-modal-type="Large"
                                           asp-ajax-modal-title="لیست نقش ها"
                                           asp-ajax-success="Role.FillFromModel();Role.UpdateTable();"
                                           title="افزودن نقش"
                                           class="text-muted removeAfterDelete @(user.IsDeleted ? "d-none" : "")">
                                            <iconify-icon icon="mdi:lock-plus-outline" width="22"
                                                          height="22"></iconify-icon>
                                        </a>
                                        <a invoke-permission="@PermissionsName.CreateUserPosition"
                                           asp-area="Admin"
                                           asp-controller="UserPosition"
                                           asp-action="Create"
                                           asp-ajax="true"
                                           asp-ajax-modal-type="Medium"
                                           asp-ajax-modal-title="افزودن به تیم برنامه‌نویسان"
                                           asp-ajax-validation="true"
                                           asp-route-userId="@user.Id"
                                           class="text-success removeAfterDelete @(user.IsDeleted ? "d-none" : "")"
                                           title="افزودن به تیم برنامه‌نویسان">
                                            <iconify-icon icon="mage:user-plus" width="24" height="24"></iconify-icon>
                                        </a>
                                        <a invoke-permission="@PermissionsName.UpdateUser"
                                           asp-area="Admin"
                                           asp-controller="User"
                                           asp-action="Update"
                                           asp-route-id="@user.Id"
                                           class="text-warning removeAfterDelete @(user.IsDeleted ? "d-none" : "")"
                                           title="ویرایش">
                                            <iconify-icon icon="uil:edit" width="22" height="22"></iconify-icon>
                                        </a>
                                        <a invoke-permission="@PermissionsName.CreateAboutUsComment"
                                           asp-area="Admin"
                                           asp-controller="AboutUsComment"
                                           asp-action="Create"
                                           asp-ajax="true"
                                           asp-ajax-modal-type="Medium"
                                           asp-ajax-modal-title="افزودن کامنت "
                                           asp-ajax-validation="true"
                                           asp-route-userId="@user.Id"
                                           class="text-success removeAfterDelete @(user.IsDeleted ? "d-none" : "")"
                                           title="افزودن کامنت">
                                            <iconify-icon icon="gravity-ui:comment-plus" width="22" height="22"></iconify-icon>
                                        </a>


                                        @if (user.IsDeleted)
                                        {
                                            <a invoke-permission="@PermissionsName.DeleteOrRecoverUser"
                                               class="text-info"
                                               onclick="ConfirmRecover(this, '@Url.Action("DeleteOrRecover", "User", new { area = "Admin", id = user.Id })')"
                                               title="بازگردانی">
                                                <iconify-icon icon="solar:undo-left-round-outline" width="22"
                                                              height="22"></iconify-icon>
                                            </a>
                                        }
                                        else
                                        {
                                            <a invoke-permission="@PermissionsName.DeleteOrRecoverUser"
                                               class="text-danger"
                                               onclick="ConfirmDelete(this, '@Url.Action("DeleteOrRecover", "User", new { area = "Admin", id = user.Id })')"
                                               title="حذف">
                                                <iconify-icon icon="solar:trash-bin-trash-outline" width="22"
                                                              height="22"></iconify-icon>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <partial name="_PagingPartial" model="@Model.GetCurrentPaging()"/>
                }
                else
                {
                    <partial name="_NotFoundPartial"/>
                }
            </div>
        </div>
    </div>
</div>


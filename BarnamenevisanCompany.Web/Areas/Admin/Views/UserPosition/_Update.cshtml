@model BarnamenevisanCompany.Domain.ViewModels.Admin.UserPosition.AdminUpdateUserPositionViewModel

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <form asp-area="Admin"
                          asp-controller="UserPosition"
                          asp-action="Update"
                          asp-ajax="true"
                          asp-ajax-method="Post"
                          asp-ajax-close-modal-onSuccess="Current"
                          asp-ajax-success="onAjaxSuccess(data, status, xhr);"
                          asp-ajax-substitution="filter-search">

                        <div class="row">
                            <input asp-for="Id" type="hidden"/>
                            <div class="floating-labels col-12 col-md-4 mt-4 mt-md-0 mb-4">
                                <div class="form-group">
                                    <input asp-for="Position" class="form-control">
                                    <span class="bar"></span>
                                    <label asp-for="Position"></label>
                                    <span asp-validation-for="Position"></span>
                                </div>
                            </div>

                            <div class="floating-labels col-12 col-md-4 mt-4 mt-md-0 mb-4">
                                <div class="form-group">
                                    <input asp-for="WebsiteAddress" class="form-control">
                                    <span class="bar"></span>
                                    <label asp-for="WebsiteAddress"></label>
                                    <span asp-validation-for="WebsiteAddress"></span>
                                </div>
                            </div>

                            <div class="floating-labels col-12 col-md-4 mt-4 mt-md-0 mb-4">
                                <div class="form-group">
                                    <input asp-for="Priority" inputmode="numeric"
                                           pattern="[0-9]*"
                                           oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                                           class="form-control">
                                    <span class="bar"></span>
                                    <label asp-for="Priority"></label>
                                    <span asp-validation-for="Priority"></span>
                                </div>
                            </div>


                            <div class="col-12 mt-4">
                                <button class="btn btn-rounded btn-success" type="submit">ویرایش</button>
                                <button type="button" data-bs-dismiss="modal" class="btn btn-rounded btn-danger">
                                    انصراف
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@using BarnamenevisanCompany.Application.Extensions
@model BarnamenevisanCompany.Domain.ViewModels.Client.User.ClientUserViewModel

<div class="col-span-full">
    <div class="bg-white dark:bg-dark-200 rounded-medium p-2.5 shadow-nav">
        <div class="border border-dashed rounded border-gray-100 dark:border-borderColour-dark p-6 h-full">
            <div class="grid-cols-12">
                <div class="col-span-full space-y-7">
                    <div>
                        <h3 class="text-xl">مشخصات حساب کاربری</h3>
                    </div>
                    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-y-5 justify-start items-start">

                        <div>
                            <h5 class="font-medium text-base text-nowrap inline">نام :</h5>
                            <span class="font-light text-base inline">@Model.FirstName.ToShow()</span>
                        </div>

                        <div>
                            <h5 class="font-medium text-base text-nowrap inline">نام خانوادگی :</h5>
                            <span class="font-light text-base inline">@Model.LastName.ToShow()</span>
                        </div>
                        
                        <div>
                            <h5 class="font-medium text-base text-nowrap inline">شماره موبایل :</h5>
                            <span class="font-light text-base inline">@Model.Mobile</span>
                        </div>

                        <div>
                            <h5 class="font-medium text-base text-nowrap inline">تاریخ عضویت :</h5>
                            <span class="font-light text-base inline">@Model.CreatedDate.ToShamsi()</span>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
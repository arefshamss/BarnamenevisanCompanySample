                @*               id="Message" maxlength="2000" name="Message"></textarea> *@
                @* </div> *@

                <div class="col-span-full">
                    <button type="submit" class="btn-warning px-5 py-2 tracking-tight">
                        ویرایش شبکه اجتماعی
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
